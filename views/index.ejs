<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

</head>

<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Tickets</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/create">New Ticket</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-xxl text-center">
        <div class="row">
            <table class="table table-light table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Bought @</th>
                        <th scope="col">Price on Steam</th>
                        <th scope="col">ROI</th>
                        <th scope="col">Gain</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <ul>
                    <% for(let ticket of tickets) { %>
                        <tr>
                            <td><a href="/show/<%=ticket.id%>">
                                    <%= ticket.name %>
                                </a> </td>
                            <td>
                                <%= ticket.amount %>
                            </td>
                            <td>
                                <%= ticket.price %>€
                            </td>
                            <td>
                                <%= ticket.currentPrice %>€
                            </td>
                            <td>
                                <% const ticketRoi=ticket.currentPrice/ticket.price * 100 %>
                                    <%= ticketRoi.toFixed(0) %>%
                            </td>
                            <td>
                                <% const moneyTotal=(ticket.currentPrice * ticket.amount) - (ticket.price *
                                    ticket.amount)%>
                                    <%= moneyTotal.toFixed(2) %>€
                            </td>
                        </tr>

                        <% } %>
                </ul>
            </table>
        </div>
    </div>

    <div class="container-xxl text-center">
            <dl class="row">
                <dt class="col-sm-3">Total Investment</dt>
                <dd class="col-sm-9">
                    <%=total.totalInvestment.toFixed(2) %>€
                </dd>

                <dt class="col-sm-3">Total Value</dt>
                <dd class="col-sm-9">
                    <%=total.totalValue.toFixed(2) %>€
                </dd>

                <dt class="col-sm-3">Total Value after Tax</dt>
                <dd class="col-sm-9">
                    <%= (total.totalValue * 0.75).toFixed(2) %>€
                </dd>

                <dt class="col-sm-3">Total Gain</dt>
                <dd class="col-sm-9">
                    <%= (total.totalValue * 0.75.toFixed(2) - total.totalInvestment.toFixed(2)).toFixed(2) %>€
                </dd>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</body>

</html>